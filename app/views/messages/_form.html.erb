<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
        <%= alert %>
        <ul>
            <% @message.errors.full_messages.each do |full_message| %>
              <li>
                  <%= full_message %>
              </li>
            <% end %>
        </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label class="col-sm-1 control-label">名前：</label>
    <div class="col-sm-11">
        <%= f.text_field :name, :size => 40, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-1 control-label">年齢：</label>
    <div class="col-sm-11">
        <%= f.text_field :age, :size => 40, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-1 control-label">内容：</label>
    <div class="col-sm-11">
        <%= f.text_area :body, :size => "40x10", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
        <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>